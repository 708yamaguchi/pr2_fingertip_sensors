        name="$(arg gripper)_gripper_$(arg finger)_fingertip_pfs_a_2_broadcaster"
        args="-0.003 -0.002 0 0 0 0 1
              $(arg parent_link) $(arg gripper)_gripper_$(arg finger)_fingertip_pfs_a_2
              100" />

